<%- include('partials/header') %>

<!-- Form -->
<form method="post" action="/momo/pay">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-5">

        <div class="card shadow-lg">
          <div class="card-body p-4 p-md-5">

            <h4 class="card-title mb-4 text-center fw-bold text-primary">
              MTN Data Bundle
            </h4>

            <!-- Beneficiary Number -->
            <div class="mb-3">
              <label class="form-label fw-semibold">Beneficiary Number</label>
              <input type="tel"
                     id="phoneNumber"
                     name="payerNumber"
                     class="form-control form-control-lg"
                     placeholder="0550000000"
                     required>
              <small id="phoneError" class="text-danger d-none">
                Enter a valid Ghana phone number
              </small>
            </div>

            <!-- Bundle Size -->
            <div class="mb-3">
              <label class="form-label fw-semibold">Select Bundle Size</label>
              <select class="form-select form-select-lg" id="bundleSelect" name="amount" required>
                <option value="" disabled selected>Select bundle size</option>
                <option value="5">1 GB — GHS 5.00</option>
                <option value="10.5">2 GB — GHS 10.50</option>
                <option value="14.5">3 GB — GHS 14.50</option>
                <option value="19.5">4 GB — GHS 19.50</option>
                <option value="24">5 GB — GHS 24.00</option>
                <option value="28">6 GB — GHS 28.00</option>
                <option value="37">8 GB — GHS 37.00</option>
                <option value="46">10 GB — GHS 46.00</option>
                <option value="51">12 GB — GHS 51.00</option>
                <option value="65">15 GB — GHS 65.00</option>
                <option value="85">20 GB — GHS 85.00</option>
                <option value="106">25 GB — GHS 106.00</option>
                <option value="125">30 GB — GHS 125.00</option>
                <option value="168">40 GB — GHS 168.00</option>
                <option value="215">50 GB — GHS 215.00</option>
                <option value="384">100 GB — GHS 384.00</option>
              </select>
            </div>

            <!-- Bundle Price -->
            <div class="mb-3 text-center bundle-price">
              Bundle Price Selected: <span id="bundlePriceDisplay">GHS 0.00</span>
            </div>

            <!-- Charges Notice -->
            <div class="alert alert-light alert-custom small mb-3">
              Includes all applicable charges
            </div>

            <!-- Warning -->
            <div class="alert alert-warning small">
              ⚠️ There will be no refund for a wrong beneficiary number.
            </div>

            <!-- Pay Button -->
            <button type="submit" class="btn btn-primary btn-lg w-100">
              Pay with Wallet
            </button>

          </div>
        </div>

      </div>
    </div>
  </div>
</form>
<!-- Form End -->

<%- include('partials/footer') %>
