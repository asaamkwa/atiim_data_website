<%- include('../partials/adminheader') %>

<div class="container-fluid">
  <div class="row min-vh-100">

    <!-- Sidebar -->
   
    <!-- Sidebar for desktop -->
    <nav class="col-md-3 col-lg-2 d-none d-md-block bg-light sidebar border-end">
      <div class="pt-4 px-3 text-center">

        <!-- Brand -->
        <i class="bi bi-speedometer2 fs-1 text-primary"></i>
        <h6 class="fw-bold mt-2">Admin Dashboard</h6>

        <!-- Menu -->
        <ul class="nav nav-pills flex-column gap-1 mt-4">
          <li class="nav-item">
            <a href="/admin/dashboard" class="nav-link active">
              <i class="bi bi-house me-2"></i> Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link text-dark">
              <i class="bi bi-person me-2"></i> Profile
            </a>
          </li>
          <li class="nav-item">
            <a href="/admin/bundles" class="nav-link text-dark">
              <i class="bi bi-wifi me-2"></i>Bundles
            </a>
          </li>
          <li class="nav-item mt-3">
            <a href="/admin/logout" class="nav-link text-danger">
              <i class="bi bi-box-arrow-right me-2"></i> Logout
            </a>
          </li>
        </ul>

      </div>
    </nav>

    <!-- Offcanvas Sidebar for mobile -->
    <div class="d-md-none">
      <button class="btn btn-primary m-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar">
        <i class="bi bi-list"></i> Menu
      </button>

      <div class="offcanvas offcanvas-start" tabindex="-1" id="mobileSidebar">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title">Admin Dashboard</h5>
          <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
          <ul class="nav nav-pills flex-column gap-2">
            <li class="nav-item"><a href="/admin/dashboard" class="nav-link active">Dashboard</a></li>
            <li class="nav-item"><a href="#" class="nav-link">Profile</a></li>
                      <li class="nav-item">
            <a href="/admin/pending-users" class="nav-link text-dark">
              <i class="bi bi-person me-2"></i> View Pending Users
            </a>
          </li>
            <li class="nav-item"><a href="/admin/add/data" class="nav-link">Bundles</a></li>
            <li class="nav-item"><a href="/admin/logout" class="nav-link text-danger">Logout</a></li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <main class="col-md-9 col-lg-10 px-4 py-4">

<div class="container-fluid">
  <main class="px-4 py-4">

   <h4 class="mb-3">All Bundle Requests</h4>

<div class="row mb-4">
  <% for (const [network, total] of Object.entries(totalsByNetwork)) { %>
    <div class="col-md-3">
      <div class="card shadow-sm border-0">
        <div class="card-body d-flex justify-content-between align-items-center">
          <div>
            <h6 class="text-muted mb-1"><%= network %> Total</h6>
            <h5 class="fw-bold">GHS <%= total.toFixed(2) %></h5>
          </div>
          <i class="bi bi-wifi fs-2 text-info"></i>
        </div>
      </div>
    </div>
  <% } %>

  <!-- Overall Total -->
  <div class="col-md-3">
    <div class="card shadow-sm border-0">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div>
          <h6 class="text-muted mb-1">Overall Total</h6>
          <h5 class="fw-bold">GHS <%= overallTotal.toFixed(2) %></h5>
        </div>
        <i class="bi bi-cash fs-2 text-success"></i>
      </div>
    </div>
  </div>
</div>

<table class="table table-bordered table-hover">
  <thead class="table-light">
    <tr>
      <th>Network</th>
      <th>Phone Number</th>
      <th>Bundle</th>
      <th>Price (GHS)</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% requests.forEach(r => { %>
      <tr>
        <td><%= r.network %></td>
        <td><%= r.phoneNumber %></td>
        <td><%= r.bundle ? r.bundle.name : 'Deleted' %></td>
        <td><%= r.price.toFixed(2) %></td>
        <td><%= r.createdAt.toLocaleString() %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

  </main>
</div>

    

    </main>
  </div>
</div>

<%- include('../partials/footer') %>
