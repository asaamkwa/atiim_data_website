<script>
   // Auto price update
    const bundleSelect = document.getElementById("bundleSelect");
    const bundlePriceDisplay = document.getElementById("bundlePriceDisplay");

    bundleSelect.addEventListener("change", function () {
      const price = parseFloat(this.value);
      bundlePriceDisplay.textContent = `GHS ${price.toFixed(2)}`;
    });

phoneInput.addEventListener("input", function () {
      if (this.value === "") {
        phoneError.classList.add("d-none");
        this.classList.remove("is-invalid");
        return;
      }

      if (!isValidGhanaNumber(this.value)) {
        phoneError.classList.remove("d-none");
        this.classList.add("is-invalid");
      } else {
        phoneError.classList.add("d-none");
        this.classList.remove("is-invalid");
        this.classList.add("is-valid");
      }
    });

    // Optional: normalize to 233 format before submission
    function normalizeGhanaNumber(number) {
      if (number.startsWith("0")) {
        return "233" + number.slice(1);
      } else if (number.startsWith("+233")) {
        return number.slice(1); // +233 → 233
      }
      return number;
    }


</script>
