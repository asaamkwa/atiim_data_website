<%- include('../partials/header') %>

<div class="container py-5">

  <!-- Welcome Section -->
  <div class="row justify-content-center mb-5">
    <div class="col-md-9">
      <div class="card dashboard-card shadow-sm border-0">
        <div class="card-body p-4 text-center">

          <h3 class="fw-bold mb-1">
            Welcome back, <span class="text-primary"><%= user.name %></span> ðŸ‘‹
          </h3>

          <p class="text-muted mb-4">
            Manage your account and buy data bundles easily
          </p>

          <!-- Info Pills -->
          <div class="d-flex justify-content-center flex-wrap gap-3 mb-4">
            <span class="badge bg-light text-dark px-3 py-2">
              <i class="bi bi-envelope"></i> <%= user.email %>
            </span>

            <span class="badge bg-secondary text-uppercase px-3 py-2">
              <i class="bi bi-person-badge"></i> <%= user.role %>
            </span>
          </div>

          <!-- Actions -->
          <div class="d-flex justify-content-center gap-3">
            <a href="/profile" class="btn btn-outline-primary px-4">
              <i class="bi bi-person"></i> Profile
            </a>

            <a href="/logout" class="btn btn-outline-danger px-4">
              <i class="bi bi-box-arrow-right"></i> Logout
            </a>
          </div>

        </div>
      </div>
    </div>
  </div>

  <!-- Services -->
  <h4 class="fw-bold mb-4 text-center">Buy Data Bundles</h4>

  <div class="row g-4">

    <!-- MTN -->
    <div class="col-md-4">
      <div class="card dashboard-card h-100 shadow-sm">
        <img src="/images/mtn.png" class="service-img card-img-top">
        <div class="card-body text-center">
          <h5 class="fw-bold text-warning">MTN</h5>
          <p class="text-muted small">
            Instant MTN data bundle delivery.
          </p>
        </div>
        <div class="card-footer bg-white border-0 text-center">
          <a href="/buy?network=mtn" class="btn w-100 fw-bold"
             style="background:#FFCC00;color:#000;">
            Buy MTN Data
          </a>
        </div>
      </div>
    </div>

    <!-- Telecel -->
    <div class="col-md-4">
      <div class="card dashboard-card h-100 shadow-sm">
        <img src="/images/tel.png" class="service-img card-img-top">
        <div class="card-body text-center">
          <h5 class="fw-bold text-danger">Telecel</h5>
          <p class="text-muted small">
            Fast and reliable Telecel bundles.
          </p>
        </div>
        <div class="card-footer bg-white border-0 text-center">
          <a href="/buy?network=telecel" class="btn btn-danger w-100 fw-bold">
            Buy Telecel Data
          </a>
        </div>
      </div>
    </div>

    <!-- AT -->
    <div class="col-md-4">
      <div class="card dashboard-card h-100 shadow-sm">
        <img src="/images/at.png" class="service-img card-img-top">
        <div class="card-body text-center">
          <h5 class="fw-bold text-primary">AT</h5>
          <p class="text-muted small">
            Affordable AirtelTigo data bundles.
          </p>
        </div>
        <div class="card-footer bg-white border-0 text-center">
          <a href="/buy?network=at" class="btn btn-primary w-100 fw-bold">
            Buy AT Data
          </a>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('../partials/footer') %>
